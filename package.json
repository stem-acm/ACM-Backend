{
  "name": "acm-backend",
  "version": "1.0.0",
  "description": "ACM Backend REST API for managing members, activities, and check-ins",
  "main": "dist/server.js",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "api-docs": "open-cli http://localhost:3000/api-docs",
    "jwt:generate": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "seed": "tsx src/db/seed.ts",
    "db:seed": "docker-compose exec backend pnpm seed",
    "prepare": "husky"
  },
  "keywords": [
    "acm",
    "backend",
    "api",
    "express",
    "drizzle",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "postgres": "^3.4.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.24",
    "@types/pg": "^8.15.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "drizzle-kit": "^0.31.6",
    "husky": "^8.0.3",
    "open-cli": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
